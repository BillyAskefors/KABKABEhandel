<script> 
    $(document).ready(function () {
        
        for (var i in localStorage) {

            if (i.indexOf("product-item-") > -1) {
                var item = JSON.parse(localStorage[i]);
                $("#itemsInCart").append("<li id='product-item-" + item.Id + "'>" + item.Name + " quantity: " + item.Quantity + "<span>pc</span></li>")
            }
        }
        $("#itemsInCart").on('click', "span", function () {
            localStorage.removeItem($(this).parent().prop('id'));

            $("#" + $(this).parent().prop('id')).remove(); 

            alert(ProductsInCart());
            $("#shopcartQuantity").text(" " + ProductsInCart() + " st");
        });

    }); 
</script>

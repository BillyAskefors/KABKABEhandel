@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"
@model AddProductViewModel
<html>
<head>
    <title>Add product</title>
</head>
<body>
    <h1>Add product</h1>
    <form asp-controller="product" asp-action="add">
        <label asp-for="Name"></label><br />
        <input asp-for="Name" placeholder="Name" />

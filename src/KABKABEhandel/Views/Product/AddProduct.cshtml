        <span asp-validation-for="Price"></span>
        <br />
        <br />
        <label asp-for="IsActive">Visible for customer</label><br />
        <input asp-for="IsActive" placeholder="Top speed" />
        <span asp-validation-for="IsActive"></span>
        <br />
        <br />
        @*<label asp-for="AcceptTerms">I accpet terms and conditions</label><br />

@{
    ViewData["Title"] = "Product Page";
}

@model KABKABEhandel.ViewModels.ListProductViewModel[]

<script>
    //javascript class
    function Product (id, quantity) {
        this.id = id;        
        this.quantity = quantity
    }

    //anropas när vi klickar på add
    function addToCart(id, quantity){   
        var quantity = $("#quantity option:selected").text();
        var product = new Product(id, quantity);
        //alert("Add To Cart Product ID: " + product.id + " With a Quantity of: " + product.quantity);          
        var productInCart = [product.id + " " + product.quantity];
        
        for (index = 0; index < productInCart.length; index++) {
            var text = productInCart[index];
        }

        alert(text);

    }
       
</script>

<form>
    <div class="row">
        <div class="col-md-3">

            @foreach (var item in Model)
            {
                 <div class="item">
                        <img src="@item.ID" class="img-responsive" />
                    </div>
                    <h2>@item.Name</h2>
                    <h2>@item.Details</h2>
                    <h2>@item.ID</h2>
                    <h2>@item.Price :-</h2>
                    <div class="form-group">
                        <label for="sel1">Select list:</label>
                        <select class="form-control" id="quantity">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>

                    <button type="button" id="buyBtn" onclick="addToCart(@item.ID)">Add to cart</button>

                    


            }



        </div>
    </div>
</form>
